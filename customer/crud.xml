					<column name="collectionGroup.contactName.contactTypeIdDer" label="Contact Type Id"/>
				</columns>
				<quickedit-canvas>
					<panel id="collectionGroup.panel" label="Collection Group" cols="3">
						<field name="collectionGroup.collectionGroupName"/>
						<field name="collectionGroup.isDefaultGroup" />
						<field name="collectionGroup.contactName"  targetFields="collectionGroup.panel" />
						<field name="collectionGroup.contactName.contactTypeIdDer" label="Contact Type Id"/>
