						<columns>
							<column name="assetSecurity.borrower" />
							<column name="assetSecurity.description" />
							<column name="assetSecurity.assetValue" label="Value"
								footer-name="Customer.assetLiability.totalSecuritiesValue"
								targetFields="Customer.CSFP.summary,Customer.assetLiability.assetSecurities" />
						</columns>
					</data-table>
					<data-table name="Customer.assetLiability.assetPersonalProperties"
						row="assetPersonalProperty" label="Contents Of Home">
						<columns>
							<column name="assetPersonalProperty.borrower"/>
							<column name="assetPersonalProperty.contents" />
							<column name="assetPersonalProperty.assetValue" label="Value"
								footer-name="Customer.assetLiability.totalPPValue"
								targetFields="Customer.CSFP.summary,Customer.assetLiability.assetPersonalProperties" />
						</columns>
					</data-table>
				</section>
				<section id="Customer.CSFP.liabilities" label="Liabilities"
					cols="3">
					<data-table name="Customer.assetLiability.liabilityMortgages"
						row="liabilityMortgage" label="Mortgage">
						<columns>
							<column name="liabilityMortgage.borrower"  />
							<column name="liabilityMortgage.mortgagee" label="Bank" />
