		<!-- Assets tab -->
		<tab id="tab.Customer.csfp" label="Assets">
			<panel id="Customer.CSFP.summary" label="Assets/Liabilities Summary"
				cols="1" orientation="horizontal">
				<section id="Customer.CSFP.summary.assets" cols="1">
					<field name="customer.assetLiability.totalAssetValue" label="Total Assets" />
				</section>
				<section id="Customer.CSFP.summary.liabilities" cols="1">
					<field name="Customer.assetLiability.totalLiabilityBalance"
						label="Total Liabilities" />
					<field name="Customer.assetLiability.netWorth" label="Net Worth"/>
				</section>
			</panel>

			<panel id="Customer.CSFP.assetsLiabilities" label="Assets and Liabilities"
				orientation="horizontal">
				<section id="Customer.CSFP.assets" label="Assets" cols="3">
					<data-table name="Customer.assetLiability.assetRealEstates"
						row="assetRealEstate" label="Real Estate">
						<columns>
							<column name="assetRealEstate.borrower" />
							<column name="assetRealEstate.address.address1" label="Street" />
							<column name="assetRealEstate.address.address2" label="Address Line2" />
							<column name="assetRealEstate.address.city" label="City" />
							<column name="assetRealEstate.address.state"/>
							<column name="assetRealEstate.address.country" label="Country" targetFields="Customer.assetLiability.assetRealEstates" />
							<column name="assetRealEstate.address.postalCode" />
							<column name="assetRealEstate.assetValue" label="Value"
								footer-name="customer.assetLiability.totalREValue"
								targetFields="Customer.CSFP.summary,Customer.assetLiability.assetRealEstates" />
						</columns>
					</data-table>
					<data-table name="Customer.assetLiability.assetMotorVechiles"
						row="assetMotorVechile" label="Motor Vehicles">
						<columns>
							<column name="assetMotorVechile.borrower" />
							<column name="assetMotorVechile.description" />
							<column name="assetMotorVechile.assetValue" label="Value"
								footer-name="Customer.assetLiability.totalMVValue" footer-label="Total"
								targetFields="Customer.CSFP.summary,Customer.assetLiability.assetMotorVechiles" />
						</columns>
					</data-table>
