					<filter name="Credit" expr="entity.commentType == null || entity.commentType.value == 'Credit'" desc=""/>
				</filters>
				<columns>
					<column name="commentCustomer.indexNumber" label="No." />
					<column name="commentCustomer.commentType.value" label="Comment Type" />
					<column name="commentCustomer.metaInfo.createdByUser" label="Author" />
					<column name="commentCustomer.metaInfo.lastModifiedAt"
						label="Last Updated Date" />
					<column name="commentCustomer.metaInfo.createdAt" label="Date Added" />
					<column name="commentCustomer.commentText" label="Text" />
				</columns>
				<quickedit-canvas id="customerComments">
					<panel id="comment.enterComment">
						<field name="comment.commentType" label="Comment Type*" />
						<field name="comment.commentText" label="Text*" />
						<field />
					</panel>
				</quickedit-canvas>
			</data-table>
